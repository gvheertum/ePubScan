<div data-bind="with: ActiveBook">
	
	<div class="jumbotron">
		<h1 class="display-4"><span data-bind="text: author"></span><br/><span data-bind="text: title"></h1>
		<a class="btn btn-dark" role="button" href="#Overview/">Back</a>
	</div>
	
	<div class="card border-dark">
		<div class="card-header">Book details</div>	
		<form>
			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">BookID (db)</span>
				</div>
				<input type="text" readonly="readonly" class="form-control" data-bind="value: bookID" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
			</div>

			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Identifier</span>
				</div>
				<input type="text" class="form-control" data-bind="value: identifier" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
			</div>

			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Title</span>
				</div>
				<input type="text" class="form-control" data-bind="value: title" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
			</div>

			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Author</span>
				</div>
				<input type="text" class="form-control" data-bind="value: author" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
			</div>

			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Description</span>
				</div>
				<textarea id="readRemark" class="form-control" data-bind="value: description"></textarea>
			</div>

			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Medium</span>
				</div>
				<select data-bind="value: medium" id="medium" class="form-control">
						<option></option>
						<option>ebook</option>
						<option>Physical</option>
						<option>Bundle</option>
					</select>
			</div>

			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Nr. of pages</span>
				</div>
				<input type="text" class="form-control" data-bind="value: nrOfPages" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
			</div>
			
			<div class="card-footer text-muted">
				<button class="btn btn-info" type="button" data-bind="click: $root.updateBookData.bind($root)">Update book data</button>
			</div>
		</form>
	</div>


	<div class="card border-dark">
		<div class="card-header">Read status</div>
		<form>
			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Read status</span>
				</div>
				<select data-bind="value: readStatus" id="readStatus" class="form-control">
					<option></option>
					<option class="read">Read</option>
					<option class="reading">Reading</option>
					<option class="toread">To read</option>
					<option class="notgoingtoread">Not going to read</option>
				</select>
			</div>

			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Read remark</span>
				</div>
				<textarea id="readRemark" class="form-control" data-bind="value: readRemark"></textarea>
			</div>
			
			<div class="card-footer text-muted">
				<button class="btn btn-info" type="button" data-bind="click: $root.updateReadData.bind($root)">Update read status</button>
			</div>
		</form>
	</div>

	<div class="card border-dark">
		<div class="card-header">Availability</div>
		<form>
			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Status</span>
				</div>
				<select id="status" class="form-control"  data-bind="value: status">
					<option></option>
					<option>N/A</option>
					<option>Available</option>
					<option>Lend-out</option>
					<option>Available at other location</option>
				</select>
			</div>
		
			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-sm">Status remark</span>
				</div>
				<textarea class="form-control" id="statusRemark" data-bind="value: statusRemark"></textarea>
			</div>
			<div class="card-footer text-muted">
				<button class="btn btn-info" type="button" data-bind="click: $root.updateAvailabilityData.bind($root)">Update availability status</button>
			</div>
		</form>
	</div>
	
</div>
