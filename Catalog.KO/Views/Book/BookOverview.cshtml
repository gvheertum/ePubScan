<div data-bind="if: Collection">

	<div class="alert alert-info" role="alert" style="margin-top: 10px; ">
		<span>Number of books: </span><span data-bind="text: NumberOfBooks"></span>
	</div>

	<table class="table" style="margin-top: 20px">
		<colgroup>
			<col width="50"/>
			<col width="100"/>
			<col width="200"/>
			<col width="*"/>
			<col width="20"/>
			<col width="10"/>
		</colgroup>
		<thead class="thead-dark">
			<tr> 
				<th>ID</th>
				<th>Status</th>
				<th>Author</th>
				<th>Title</th>
				<th>Pages</th>
				<th title="Has description">D</th>
			</tr>
		</thead>
		<tbody data-bind="foreach: Collection">
			<tr data-bind="attr: { state: readStatus}">
				<td><a data-bind="attr: {href: '#Detail/' + bookID() }, text: bookID"></a></td>
				<td data-bind="attr: {title: readRemark}, text: readStatus"></td>
				<td data-bind="text: author"></td>
				<td data-bind="text: title"></td>
				<td data-bind="text: nrOfPages"></td>
				<td data-bind="attr: {title: description}" class="Description">
					<span data-bind="if: description">V</span>
					<span data-bind="ifnot: description">-</span>
				</td>
			</tr>
		</tbody>
	</table>
</div>